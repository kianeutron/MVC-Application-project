@model Activity

<h2 class="text-center my-4 text-danger">Delete Activity</h2>

<div class="container">
    <div class="alert alert-warning text-center">
        <strong>Are you sure you want to delete this activity?</strong>
    </div>

    <div class="row mb-3">
        <div class="col-sm-2">
            <strong>Activity Name:</strong>
        </div>
        <div class="col-sm-10">
            <p>@Model.ActivityName</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-2">
            <strong>Date:</strong>
        </div>
        <div class="col-sm-10">
            <p>@Model.Date.ToString("d")</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-2">
            <strong>Start Time:</strong>
        </div>
        <div class="col-sm-10">
            <p>@Model.StartTime.ToString(@"hh\:mm")</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-2">
            <strong>End Time:</strong>
        </div>
        <div class="col-sm-10">
            <p>@Model.EndTime.ToString(@"hh\:mm")</p>
        </div>
    </div>

    <div class="text-center mb-3">

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="ActivityID"/>
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
        </form>
    </div>

    <div class="text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to Activities List</a>
    </div>
</div>