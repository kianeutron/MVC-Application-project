@{
    ViewData["Title"] = "Remove Participant from Activity";
    var activity = ViewBag.Activity as Activity;
}

<h2 class="text-center my-4">Remove Participant from @activity.ActivityName</h2>

<div class="container">
    <h3>Participants in @activity.ActivityName</h3>

    <form method="post" action="@Url.Action("RemoveParticipant", "Activity")">
        <input type="hidden" name="activityId" value="@activity.ActivityID"/>

        <div class="mb-3">
            <label for="StudentID" class="form-label">Select Student to Remove</label>
            <select class="form-select" name="studentId" required>
                <option value="">-- Select a Student --</option>
                @foreach (var student in ViewBag.Participants)
                {
                    <option value="@student.StudentID">@student.FirstName @student.LastName</option>
                }
            </select>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-danger">Remove Participant</button>
        </div>
    </form>

    <div class="text-center mt-4">
        <a href="@Url.Action("ManageParticipants", "Activity", new { activityId = activity.ActivityID })"
           class="btn btn-secondary">Back to Manage Participants</a>
    </div>
</div>