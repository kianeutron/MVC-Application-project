@model IEnumerable<Activity>

<h2 class="text-center my-4">Activity List</h2>

<div class="container">
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
        <tr>
          
            <th>Activity Name</th>
            <th>Date</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var activity in Model)
        {
            <tr>

                <td>@activity.ActivityName</td>
                <td>@activity.Date.ToString("yyyy-MM-dd")</td>
                <td>@activity.StartTime.ToString(@"hh\:mm")</td>
                <td>@activity.EndTime.ToString(@"hh\:mm")</td>
                <td>
                    <a href="@Url.Action("Edit", "Activity", new { id = activity.ActivityID })"
                       class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Activity", new { id = activity.ActivityID })"
                       class="btn btn-danger btn-sm">Delete</a>
                    <a href="@Url.Action("ManageParticipants", "Activity", new { activityId = activity.ActivityID })"
                       class="btn btn-info btn-sm">Manage Participants</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="@Url.Action("Create", "Activity")" class="btn btn-primary btn-lg">Create New Activity</a>
    </div>
</div>