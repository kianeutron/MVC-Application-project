@model Lecturer

@{
    ViewData["Title"] = "Delete Lecturer";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow rounded">
    <div class="card-body">
        <p>Are you sure you want to delete this lecturer?</p>

        <ul class="list-group mb-4">
            <li class="list-group-item"><strong>Lecturer ID:</strong> @Model.LecturerID</li>
            <li class="list-group-item"><strong>First Name:</strong> @Model.FirstName</li>
            <li class="list-group-item"><strong>Last Name:</strong> @Model.LastName</li>
            <li class="list-group-item"><strong>Phone Number:</strong> @Model.PhoneNumber</li>
            <li class="list-group-item"><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("yyyy-MM-dd")</li>
        </ul>

        <form asp-action="Delete" method="post">
            <input type="hidden" name="LecturerID" value="@Model.LecturerID"/>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="@Url.Action("Index", "Lecturer")" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<footer class="footer text-muted mt-4">
