@model Room

@{
    ViewData["Title"] = "Edit Room";
}

<h2>Edit Room</h2>

<form asp-action="Edit" method="post" class="form-horizontal">
    <div class="form-group">
        <input type="hidden" asp-for="RoomID"/>
    </div>

    <div class="form-group">
        <label for="FloorNumber" class="control-label">Floor Number</label>
        <input asp-for="FloorNumber" class="form-control" required/>
    </div>

    <div class="form-group">
        <label for="NumberOfBeds" class="control-label">Number of Beds</label>
        <input asp-for="NumberOfBeds" class="form-control" required/>
    </div>

    <div class="form-group">
        <label for="Building" class="control-label">Building</label>
        <input asp-for="Building" class="form-control" required/>
    </div>

    <div class="form-group">
        <label for="RoomType" class="control-label">Room Type</label>
        <input asp-for="RoomType" class="form-control" required/>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index", "Room")" class="btn btn-secondary">Cancel</a>
    </div>
</form>