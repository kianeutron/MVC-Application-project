@model Room

@{
    ViewData["Title"] = "Create Room";
}

<h2>Create Room</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="FloorNumber">Floor Number</label>
        <input asp-for="FloorNumber" class="form-control" required/>
    </div>
    <div class="form-group">
        <label for="NumberOfBeds">Number of Beds</label>
        <input asp-for="NumberOfBeds" class="form-control" required/>
    </div>
    <div class="form-group">
        <label for="Building">Building</label>
        <input asp-for="Building" class="form-control" required/>
    </div>
    <div class="form-group">
        <label for="RoomType">Room Type</label>
        <input asp-for="RoomType" class="form-control" required/>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a href="@Url.Action("Index", "Room")" class="btn btn-secondary">Cancel</a>
    </div>
</form>