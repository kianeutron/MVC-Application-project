@model Room

@{
    ViewData["Title"] = "Delete Room";
}

<h2>Are you sure you want to delete this room?</h2>

<div class="alert alert-warning" role="alert">
    <strong>Warning!</strong> Deleting this room is permanent and cannot be undone.
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="RoomID"/>

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Room")" class="btn btn-secondary">Cancel</a>
    </div>
</form>