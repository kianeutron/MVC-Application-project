@model Student

<h2 class="text-center my-4 text-danger">Delete Student</h2>

<div class="container">
    <div class="alert alert-warning text-center">
        <strong>Are you sure you want to delete this student?</strong>
    </div>

    <div class="row mb-3">
        <div class="col-sm-2">
            <strong>Student Name:</strong>
        </div>
        <div class="col-sm-10">
            <p>@Model.FirstName @Model.LastName</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-2">
            <strong>Student Number:</strong>
        </div>
        <div class="col-sm-10">
            <p>@Model.StudentNumber</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-2">
            <strong>Phone Number:</strong>
        </div>
        <div class="col-sm-10">
            <p>@Model.PhoneNumber</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-2">
            <strong>Class:</strong>
        </div>
        <div class="col-sm-10">
            <p>@Model.Class</p>
        </div>
    </div>

    <div class="text-center mb-3">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="StudentID"/>
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
        </form>
    </div>

    <div class="text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to Student List</a>
    </div>
</div>